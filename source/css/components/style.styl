body
    background: url(../img/bg.jpg) top center no-repeat #000000
    background-size: 100% auto

header
    display flex
    flex-direction: column
    align-items: center
    padding: 10%
    img 
        max-width 80%

h1
    font-size: 70px
    color: #f32500
    text-transform: uppercase
    font-weight: normal
    font-family: $font-family.secondary
    text-align: center
    letter-spacing: 20px
    margin-top: 50px
    +below($bp.md)
        font-size: 40px

.new
    font-size: 18px
    color white
    letter-spacing: 5px
    margin-top: 30px

.social
    display flex
    flex-wrap: wrap
    justify-content: center
    width: 450px
    border-top: 5px solid #f32500
    margin-top: 50px
    padding: 50px 50px 0
    max-width 95%
    +below($bp.md)
        padding 50px 0
    a
        font-size: 50px
        color: white
        display flex
        width: 80px
        height 80px
        border: 2px solid white
        border-radius: 100%
        justify-content: center
        align-items: center
        outline: 0
        +below($bp.md)
            width: 50px
            height 50px
            font-size: 30px
        &:first-child
            margin-right: 10px
    p
        font-size: 14px
        color white
        letter-spacing: 3px
        margin-top: 30px
        text-align: center

.events
    padding-bottom: 100px
    h2
        color: #f32500
        font-family: $font-family.secondary
        font-weight: normal
        letter-spacing: 5px
        text-transform: uppercase
        font-size: 45px
        margin: 0 0 50px 135px
        +below($bp.md)
            font-size: 25px
            margin-left: 0
        &:first-line
            font-size: 20px
            letter-spacing: 3px
            text-transform: none

.month
    display flex
    flex-direction: column
    &:last-child
        margin-top: 50px
    h3
        font-size: 40px
        color: white
        text-transform: uppercase
        font-family: $font-family.secondary
        letter-spacing: 3px
        margin 0 0 20px 135px
        +below($bp.md)
            margin-left: 0
            font-size: 30px
    .event
        display flex
        &:not(:first-child)
            margin-top: 20px
        .date
            width: 115px
            font-size: 90px
            color #f32500
            font-family: $font-family.secondary
            font-weight: 800
            line-height: .8
            +below($bp.md)
                font-size: 65px
                width: 80px
        .info
            flex: 1
            padding-left: 15px
            display flex
            flex-direction: column
            h4
                font-size: 22px
                color: white
                font-family: $font-family.secondary
                text-transform: uppercase
                letter-spacing: 3px
                line-height: .8
                +below($bp.md)
                    line-height: 1.4
                    font-size: 20px
                span 
                    font-weight: normal
                    opacity: .8
            .vip
                font-size: 16px
                font-style: italic
                color: white
                margin-top: 10px
                line-height: .8
                .icon
                    font-size: 16px
                    color #f32500
            .ticket
                display flex
                margin-top: 10px
                .icon
                    width: 12px
                    height 12px
                    background: #cd0000
                    color: white
                    font-size: 12px
                    text-align: center
                    margin-right: 7px
                .text
                    font-family: $font-family.secondary
                    text-transform: uppercase
                    color white
                    font-weight: 700
                    font-size: 15px
                    line-height .8

.music
    padding: 100px 20px
    background: url(../img/bg-music.jpg) center no-repeat
    background-size: cover
    +below($bp.md)
        padding: 70px 20px
    h2
        font-family: $font-family.secondary
        text-transform: uppercase
        color white
        font-weight: 400
        font-size: 40px
        line-height .8
        text-align: center
        +below($bp.md)
            line-height: 1.4
            font-size: 30px

footer 
    padding: 200px 0
    background: #ca0000
    +below($bp.md)
        padding: 70px 0
    .grid
        width: 1000px
        padding: 0 20px
        max-width 100%
        display flex
        margin: 0 auto
        +below($bp.md)
            flex-direction: column
        .left
            width 60%
            padding-right: 5%
            font-family: $font-family.secondary
            +below($bp.md)
                width: 100%
            h2
                text-transform: uppercase
                color white
                font-size: 40px
                line-height .8
                text-align: right
                letter-spacing: 5px
                +below($bp.md)
                    text-align: center
            span
                font-size: 22px
                text-align: right
                display block
                letter-spacing: 5px
                font-weight: 400
                margin-top: 20px
                +below($bp.md)
                    text-align: center
            address
                font-style: normal
                color white
                font-size: 20px
                line-height 1.2
                text-align: right
                letter-spacing: 2px
                margin-top: 20px
                +below($bp.md)
                    text-align: center
        .right
            flex 1
            +below($bp.md)
                margin-top: 30px
                display flex
                justify-content: center
                .fb-page
                    width: 280px